<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<PreferenceCategory
		android:title="@string/general_pref_label">
		
		<CheckBoxPreference
			android:key="pref_large_font_key"
			android:title="@string/pref_large_font_label"
			android:defaultValue="false" />
			
	</PreferenceCategory>
	
	<PreferenceCategory
		android:title="@string/logging_pref_label">
	
		<CheckBoxPreference
			android:key="pref_logging_key"
			android:title="@string/pref_logging_enabled_label"
			android:defaultValue="false" />
			
		<CheckBoxPreference
			android:key="pref_log_only_nick"
			android:title="@string/pref_only_notify_nick"
			android:defaultValue="false" />
	</PreferenceCategory>
	
	<!-- Add the server settings here. -->
	
	<PreferenceCategory
		android:title="@string/connection_settings_label">
		
		<CheckBoxPreference
			android:key="pref_autoconnect"
			android:title="@string/pref_autoconnect_servers"
			android:defaultValue="false" />
			
	</PreferenceCategory>
</PreferenceScreen>